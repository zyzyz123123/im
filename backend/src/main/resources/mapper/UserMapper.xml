<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyzyz.im.mapper.UserMapper">
    <insert id="insert" parameterType="com.zyzyz.im.entity.User">
        INSERT INTO t_user (user_id, password, nickname, avatar, email, status, created_at, updated_at) VALUES (#{userId}, #{password}, #{nickname}, #{avatar}, #{email}, #{status}, #{createdAt}, #{updatedAt})
    </insert>
    <select id="selectByUserId" parameterType="string" resultType="com.zyzyz.im.entity.User">
        SELECT * FROM t_user WHERE user_id = #{userId}
    </select>
    
    <select id="selectByNickname" parameterType="string" resultType="com.zyzyz.im.entity.User">
        SELECT * FROM t_user WHERE nickname = #{nickname}
    </select>
    
    <update id="updateUser" parameterType="com.zyzyz.im.entity.User">
        UPDATE t_user 
        <set>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="email != null">email = #{email},</if>
            updated_at = #{updatedAt}
        </set>
        WHERE user_id = #{userId}
    </update>
    
    <select id="selectByUserIds" resultType="com.zyzyz.im.entity.User">
        SELECT * FROM t_user 
        WHERE user_id IN
        <foreach item="userId" collection="userIds" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </select>
</mapper>